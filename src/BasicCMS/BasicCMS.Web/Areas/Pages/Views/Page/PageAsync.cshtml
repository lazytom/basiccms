@model PageViewModel
@{
    ViewData["Title"] = Model.Page.Title;
}

<h3>@Model.Page.Title</h3>

<p>This page's Url is @Model.Page.Url</p>
<p>@Model.Page.Content.Field1</p>
@if (Model.Page.ChildPages?.Any() ?? false)
{
    <h4>Child Pages</h4>
    <ul>
        @foreach (var p in Model.Page.ChildPages)
        {
            <li><a href="/@p.Url">@p.Title</a></li>
        }
    </ul>
}
